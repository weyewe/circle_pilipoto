


<li class="span3">
  <div class="thumbnail">
    
    <%= link_to  root_url,
        :class => "thumbnail" , :style => "height:160px; overflow:hidden;" do %>
      <%= image_tag article_picture.index_image_url %>
    <% end %>
    
    <!-- <img alt="" src="http://placehold.it/260x180"> -->
    <% if current_user.has_role?(:company_admin)%>
      <div class="caption">
        <table cellpadding="0" cellspacing="0" border="0" 
              class="table table-striped table-bordered" id="example">
        
          <tbody>
            <tr>
              <td>Front Page?</td>
              <td>
                <label class="checkbox">
                  <% checkbox_value = article_picture.is_selected_for_front_page?  %>
            
                  <%= check_box_tag 'is_checked', get_checkbox_value(checkbox_value )   , 
                      checkbox_value, :class => "checkbox_tracker ", 
                      :id => "provider_#{article.id}-consumer_#{article_picture.id}" %> Selected
                </label>
              </td>
            </tr>
         
          </tbody>
        </table>
      </div>
    <% end %>
  </div>
</li>



