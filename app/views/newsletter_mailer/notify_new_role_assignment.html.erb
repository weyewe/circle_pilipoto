    <%#= stylesheet_link_tag    "bootstrap_email" %>
    <%#= yield :additional_css %>
</head>
<body>
  
  
  
  <div class="container" style="padding-top:0;">
    <!-- Main hero unit for a primary marketing message or call to action -->
    <div class="hero-unit">
      <h1>Project Invitation</h1>
      <h3>Project: <b><%= @project.title %></b></h3>
    </div>
    
    <p>
      Anda telah di undang sebagai <b><%= @project_role.name %></b> di project <b><%= @project.title %></b>. 
    </p>
    <p>
      Untuk login, silakan berkunjung ke <a href="http://pilipoto.com">pilipoto.com</a>. 
    </p>
 
    
    
    
    <div class="row">
      <% @pictures.each do |pic| %>
        <%= image_tag pic.index_image_url %>
      <% end %>
    </div>
    <hr />
    
    
    
    <p>
      Jika ada pertanyaan, silakan kontak kami di <b>admin@pilipoto.com</b>. 
    </p>
    
 
    
    <footer>
      <p>&copy; poto 2011 - <%= Time.now.year %></p>
    </footer>

  </div>

</body>
</html>


