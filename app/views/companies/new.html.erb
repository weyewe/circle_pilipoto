
<div class="span9 content">
  <%= create_guide("New Company", 
        "Create the company details.").html_safe %>
  
  <% if not params[:notice].nil? %>
    <div class="alert alert-success">
      <strong>Well done!</strong> <%= params[:notice]%>.
    </div>
  <% end %>


  <%#= create_breadcrumb(@breadcrumbs).html_safe %>
  
  <div class="row-fluid">
    <div class="span8">
      <%= render :partial => "companies/new_company_form", :locals => {:company => @company }%>
    </div><!--/span-->

    <div class="span4">
      <table cellpadding="0" cellspacing="0" border="0" 
            class="table table-striped table-bordered" id="example">
        <thead>
          <tr><th>Total Companies: <%= @companies.count%></th></tr>
        </thead>
        <tbody>
          <% @companies.each do |company| %>
            <tr>
              <td><%= company.name %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      
    </div><!--/span-->
    
  </div><!--/row-->

</div><!--/span-->
