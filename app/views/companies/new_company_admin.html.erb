
<div class="span9 content">
  <%= create_guide("Add Company Admin", 
        "Enter company admin email.").html_safe %>
  
  
  <% if not params[:notice].nil? %>
    <div class="alert alert-success">
      <a data-dismiss="alert" class="close">Ã—</a>
      <strong>Well done!</strong> <%= params[:notice] %>
    </div>
  <% end %>


  <%= create_breadcrumb(@breadcrumbs).html_safe %>
  
  <div class="row-fluid">
    <div class="span8">
      <%#= render :partial => "companies/new_company_admin_form", :locals => {:company => @company }%>
      <%= simple_form_for(@new_user, :url => create_company_admin_url(@company) ,
              :html => {:class => 'form-horizontal' }) do |f| %>
        <%= f.input :email , :input_html => {:class => "input-xlarge "}, 
          :hint => "Enter the  email for company admin"%>
          
 
      

        <div class="form-actions">
          <%= f.button :submit , :class => "btn btn-primary" %>

        </div>
      <% end %>
    </div><!--/span-->

    <div class="span4">
      <table cellpadding="0" cellspacing="0" border="0" 
        class="table table-striped table-bordered" id="example">
        <thead>
          <tr><th>All Company Admins: <%#= @projects.count%></th></tr>
        </thead>
        <tbody>
        <% @company_admins.each do |company_admin| %>
          <tr>
            <td><%= company_admin.email %></td>
          </tr>
        <% end %>
      </tbody> 
    </table>

    </div><!--/span-->
    
  </div><!--/row-->

</div><!--/span-->
