
<div class="span9 content">
  <%= create_guide("New Article", 
        "Create the Article details: <b>title</b>, <b>teaser</b>, <b>description</b>. " + "<br />" + 
        "<b>Manage</b> the existing independent articles").html_safe %>
  
  
  <% if not params[:notice].nil? %>
    <div class="alert alert-success">
      <a data-dismiss="alert" class="close">Ã—</a>
      <strong>Well done!</strong> <%= params[:notice].html_safe %>.
    </div>
  <% end %>
  <%= create_breadcrumb(@breadcrumbs).html_safe %>
  
  
  <div class="row-fluid" style="margin-bottom:30px;">
    <button href="#" class="btn btn-success" 
      id="trigger-independent-article-form">Add New Independent Article</button>
  </div>
  
  
  <div class="row-fluid" id="new_independent_article_wrapper" 
        style="display:none; margin-bottom:30px; background-color: rgb(245,245,245); padding-top:10px;">
    <div class="span8">
   
      
      <%= simple_form_for(@new_article, :url => create_independent_article_url, :html => {:class => 'form-horizontal' }) do |f| %>
        <%= f.input :title , :input_html => {:class => "input-xlarge span8"}, 
        :hint => "Judul dari artikel ini."%>
        <%= f.input :teaser, :input_html => {:rows => 3, :class => "input-xlarge span8" },
        :hint => "Deskripsi singkat dari project yang dibahas di artikel ini"%>

        <%= f.input :description , :input_html => {:rows => 5, :columns=>20, :class => "input-xlarge span10"}, 
        :hint => "Deskripsi lengkap dari project yang dibahas"%>

        <div class="form-actions">
          <%= f.button :submit , :class => "btn btn-primary" %>
        </div>
      <% end %>
      
      
    </div><!--/span-->

    <div class="span4">
    
    </div><!--/span-->
    
  </div><!--/row-->
  
  
  <div class="row-fluid">
    <div class="span12">
      
      <table cellpadding="0" cellspacing="0" border="0" 
            class="table table-striped table-bordered" id="example">
        <thead>
          <tr>
            <th>Article Title</th>
            <th>Description</th>
            <th colspan='3' style="text-align:center;">Action</th> <!-- Change Title, Order Images, pull down-->
          </tr>
        </thead>
        <tbody>
          <% @articles.each do |article| %>
            <%= render :partial =>"articles/independent_article", :locals => {
              :article => article
            }%>
          <% end %>
          


        </tbody>
      </table>
    </div>

  </div><!--/row-->
   
   

</div><!--/span-->
