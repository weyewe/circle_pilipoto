
<div class="span9 content">
  
  <%= create_guide("Project -> Article", 
        "Select Project (only finalized project)").html_safe %>
  
  <%= create_breadcrumb(@breadcrumbs).html_safe %>
  
  

  <div class="row-fluid">
    <!-- <div class="span12"> -->

      <table cellpadding="0" cellspacing="0" border="0" 
            class="table table-striped table-bordered" id="example">
        <thead>
          <tr>
            <th>Project Name</th>
            <th>Approved Pictures</th>
            <th colspan='3' style="text-align:center;">Action</th> <!-- Change Title, Order Images, pull down-->
          </tr>
        </thead>
        <tbody>
          <% @projects.each do |project| %>
            <tr id="entry_row_<%= project.id %>">
              <td><%= link_to "#{project.title}", new_project_picture_url(project )%></td>
             
              <td>
                <%= project.approved_selected_files_count %>
              </td>
              
              <% if project.article.nil? %>
                <td colspan="3" style="text-align:center;">
                  
                  
                  <%= link_to "Create Article", '#', 
                            :class => "btn  entry-link entry-recover",
                            :id => "entry_#{project.id}" %>
                </td>
              <% else %>
                <td style="text-align:center;">
                  <button href="#" class="btn btn-primary">Content</button>
                </td>
                <td style="text-align:center;">
                  <button href="#" class="btn btn-info">Image Ordering</button>
                </td>
                <td style="text-align:center;">
                  <% if project.article.is_displayed == false %>
                    <button href="#" class="btn btn-success">Show</button>
                  <% elsif project.article.is_displayed == true %>
                    <button href="#" class="btn btn-danger">Hide</button>
                  <% end %>
                </td>
              <% end %>
              
            
                
            
              
            </tr>
          <% end %>
          


        </tbody>
      </table>



    <!-- </div> -->   <!--/span12-->
  </div><!--/row-->


  <div class=" hidden" id="close-entry">
    <%= form_tag  create_article_from_project_url  , :method => :post  do  %>
      <%= hidden_field_tag 'entry_id' , ''  %>
    <% end %>
  </div>
 

</div><!--/span-->












