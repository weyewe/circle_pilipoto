(function( $ ) {
  $.fn.loadImage = function(src,cb,image) {
    // console.log("calling me: " +  (new Date).getTime() );
    var self = this,
    image = image || new Image();
    setTimeout(function() {
      if (image.src != src)
        image.src = src;
      if (!image.complete)
        return self.loadImage(src,cb,image)

      $(self).attr('src',src)
      cb.call(self)
    },50);
  };
})( jQuery );


function IsImageOk(img_id){
  // http://www.sajithmr.me/javascript-check-an-image-is-loaded-or-not
  var img = document.getElementById( img_id );
  if (!img.complete) {
    return false;
  }
  
  if (typeof img.naturalWidth != undefined && img.naturalWidth  == 0) {
    return false;
  }

  // No other way of checking: assume itâ€™s ok.
  return true;
}
